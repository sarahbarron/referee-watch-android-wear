<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    tools:context="org.wit.myapplication.activities.MainActivity">

    <ToggleButton
        android:id="@+id/team1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOff="@string/team_1"
        android:textOn="@string/team_1"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <ToggleButton
        android:id="@+id/team2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/team1"
        android:layout_alignParentTop="true"
        android:textOff="@string/team_1"
        android:textOn="@string/team_1"
        android:textColor="@color/black"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/player_on_number_text"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/team1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Player ON"
        android:textSize="20dp"
        android:textColor="@color/green"/>

    <EditText
        android:id="@+id/player_on_number_input"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/player_number_text"
        android:layout_below="@id/team2"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:inputType="number"
        android:hint="0"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        />


    <TextView
        android:id="@+id/player_off_number_text"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/player_on_number_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Player OFF"
        android:textSize="20dp"
        android:textColor="@color/red_a200"/>

    <EditText
        android:id="@+id/player_off_number_input"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/player_number_text"
        android:layout_below="@id/player_on_number_input"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/grey"
        android:inputType="number"
        android:hint="0"
        android:textAlignment="center"

        />

    <Button
        android:id="@+id/btnSaveSub"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/player_off_number_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="70dp"
        android:background="@color/green"
        android:text="Save" />
</RelativeLayout>