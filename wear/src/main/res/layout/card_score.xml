<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp"
    android:id="@+id/card_score">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_a400"
        android:padding="16dp">

        <TextView
            android:id="@+id/scoreTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="12:00pm"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:text="Goal"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_toRightOf="@id/scoreTime"
            />

        <TextView
            android:id="@+id/scoreTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="hello"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_below="@id/scoreTime"
            />
        <TextView
            android:id="@+id/scorePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:text="Goodbye"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_below="@id/scoreTeam"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
