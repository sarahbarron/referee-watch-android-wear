<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="org.wit.myapplication.activities.MainActivity"
    >

    <ToggleButton
        android:id="@+id/team1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textOff="@string/team_1"
        android:textOn="@string/team_1"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/team2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/team1"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textOff="@string/team_2"
        android:textOn="@string/team_2"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/goal"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/team1"
        android:layout_alignEnd="@+id/team1"
        android:layout_below="@id/team1"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textOff="@string/goal"
        android:textOn="@string/goal"
        android:textSize="12sp"
        android:textStyle="bold" />
    <ToggleButton
        android:id="@+id/point"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/team2"
        android:layout_alignEnd="@+id/team2"
        android:layout_below="@id/team2"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textOff="@string/point"
        android:textOn="@string/point"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/player_number_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goal"
        android:layout_alignEnd="@+id/goal"
        android:layout_below="@id/goal"
        android:paddingTop="10dp"
        android:text="@string/player_no"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/player_number_input"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/point"
        android:layout_alignEnd="@+id/point"
        android:layout_below="@id/point"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:inputType="number"
        android:hint="@string/zero"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:autofillHints="@string/zero" />

    <Button
        android:id="@+id/saveScoreBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_number_input"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="70dp"
        android:background="@color/green"
        android:text="@string/save" />
</RelativeLayout>
