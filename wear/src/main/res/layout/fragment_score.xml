<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="org.wit.myapplication.activities.MainActivity"
    >

    <Button
        android:id="@+id/team1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/team_1"
        android:textColor="#009688"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/team2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/team1"
        android:layout_alignParentTop="true"
        android:text="@string/team_2"
        android:textColor="#009688"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goal"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/team1"
        android:layout_alignEnd="@+id/team1"
        android:layout_below="@id/team1"
        android:text="@string/goal"
        android:textColor="#009688"
        android:textSize="12sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/point"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/team2"
        android:layout_alignEnd="@+id/team2"
        android:layout_below="@id/team2"
        android:text="@string/point"
        android:textColor="#009688"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/player_number_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/goal"
        android:layout_alignEnd="@+id/goal"
        android:layout_below="@id/goal"
        android:paddingTop="10dp"
        android:text="@string/player_no"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/player_number_input"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/point"
        android:layout_alignEnd="@+id/point"
        android:layout_below="@id/point"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:inputType="number"
        android:hint="@string/zero"
        android:textAlignment="center"
        android:autofillHints="@string/zero" />


