<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    tools:context="org.wit.myapplication.activities.MainActivity">
    <ToggleButton
        android:id="@+id/team1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOff="@string/team_1"
        android:textOn="@string/team_1"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        />

    <ToggleButton
        android:id="@+id/team2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/team1"
        android:layout_alignParentTop="true"
        android:textOff="@string/team_2"
        android:textOn="@string/team_2"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        />



    <ToggleButton
        android:id="@+id/yellow"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/team1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffff00"
        android:padding="0dp"
        android:textOff="@string/yellowCard"
        android:textOn="@string/yellowCard"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/red"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@id/team1"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/yellow"
        android:background="@color/red_a200"
        android:textOff="@string/redCard"
        android:textOn="@string/redCard"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/black"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@id/team2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/red"
        android:background="@drawable/button_border_white"
        android:textOff="@string/blackCard"
        android:textOn="@string/blackCard"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player_number_text"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/yellow"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:text="Player Number"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/player_number_input"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/player_number_text"
        android:layout_below="@+id/black"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/grey"
        android:inputType="number"
        android:hint="0"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/player_number_input"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/green"
        android:layout_marginBottom="70dp"
        android:text="Save Card" />
</RelativeLayout>